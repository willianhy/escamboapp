<div class="modal fade" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New message</h4>
      </div>
      <div class="modal-body">
        <%= form_tag(backoffice_send_mail_index_path, remote: true) do %>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Destinat√°rio</label>
            <%= text_field_tag(:'recipient-text', nil, class: "form-control", readonly: "readonly" ) %>
          </div>

          <div class="form-group">
            <label for="message-text" class="control-label">Assunto</label>
            <%= text_field_tag(:'subject-text', nil, class: "form-control", required: "required" ) %>
          </div>

          <div class="form-group">
            <label for="message-text" class="control-label">Mensagem:</label>
            <%= text_area_tag(:'message-text', nil, class: "form-control", required: "required" ) %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag "Send Message", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>